style.
    html, body {
        height: 100%; width: 100%; margin: 0;
    }
    div.maincontent {
        height: 90%; width: 90%;
    }
    div.container {
        width: 100%;
        height: 100%;
        position: relative;
    }
    div.storybuilding {
        float: left;
        width: 50%;
        padding-left: 10%;
        height: 90%;
        padding-top: 5%;
    }
    div.sidechat {
        float: right;
        width: 19%;
        height: 90%;
        padding-top: 5%;
        padding-right: 1%;
    }
    div.users {
        float:right;
        width: 9%;
        padding-right: 10%;
        height: 90%;
        padding-top 5%;
    }

h1!= roomName

div.container
    div.storybuilding
        +storybuilder(roomName)
    div.users
        +userslist(roomName)
    div.sidechat
        +chat(roomName)
        


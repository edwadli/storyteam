
include mixins/chat
include mixins/storybuilder
include mixins/userslist

style.
    html, body {
        height: 100%; width: 100%; margin: 0;
    }
    div.container {
        width: 80%;
        padding-left: 10%;
        height: 100%;
        position: relative;
    }
    div.storybuilding {
        float: left;
        width: 65%;
        height: 90%;
    }
    div.sidechat {
        float: right;
        width: 25%;
        height: 90%;
    }
    div.users {
        float:right;
        width: 9%;
        height: 90%;
    }


div.container
    h1!= roomName
    div.storybuilding
        +storybuilder(roomName)
    div.users
        +userslist(roomName)
    div.sidechat
        +chat(roomName)
        

